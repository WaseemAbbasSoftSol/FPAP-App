<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <!--android:background="@drawable/bg_rounded_cornor"-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_One"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide1"
                android:layout_width="@dimen/_1dp"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.33"
                android:orientation="vertical"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide2"
                android:layout_width="@dimen/_1dp"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.60"
                android:orientation="vertical"/>

            <LinearLayout
                android:paddingBottom="@dimen/_5dp"
                android:id="@+id/ll_sub_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_10dp"
                android:gravity="center"
                android:background="@drawable/bg_rounded_cornor"
                android:layout_marginBottom="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guide1"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_marginEnd="@dimen/_5dp"
                    android:id="@+id/tv_sub_name"
                    android:layout_marginTop="@dimen/_3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    tools:text="Human Rights"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sp"
                 />
            </LinearLayout>




            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                tools:text="@string/label_status"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sp"
                app:layout_constraintEnd_toStartOf="@id/guide2"
                app:layout_constraintStart_toEndOf="@id/guide1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                 />


            <TextView
                android:visibility="gone"
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/label_date"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sp"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guide2"
                app:layout_constraintTop_toTopOf="parent"
                />

            <View
                android:layout_width="@dimen/_1dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginBottom="@dimen/_15dp"
                android:background="@color/green_003"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/guide1"
                />

            <View
                android:visibility="gone"
                android:id="@+id/view2"
                android:layout_width="@dimen/_1dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginBottom="@dimen/_15dp"
                android:background="@color/green_003"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/guide2"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:background="@color/green_003"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>