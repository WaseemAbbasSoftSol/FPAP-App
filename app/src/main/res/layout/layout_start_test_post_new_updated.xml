<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/grey_lite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/l_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            >

            <ImageView
                android:id="@+id/iv_post_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/im_post_test"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_start_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/label_start_post_test"
                android:textColor="@color/purple"
                android:textSize="@dimen/_22sp"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_post_test" />

            <TextView
                android:id="@+id/tv_post_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_start_test"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/label_once_you_completed"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sp"
                android:fontFamily="@font/poppins_regular"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_start_test"
                style="@style/AppTheme.ContainedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/label_take_test"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_post_test" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                app:layout_constraintTop_toBottomOf="@id/btn_start_test"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
android:visibility="gone"
        android:id="@+id/l_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_20dp"
        android:paddingBottom="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_time_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/first_guide"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.50" />

            <ImageView
                android:id="@+id/iv_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/cl_step"
                app:layout_constraintEnd_toEndOf="@id/cl_step"
                android:src="@drawable/ic_step"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="@dimen/_5dp"

                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_step"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/_5dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_cl_rectangle"
                android:backgroundTint="@color/yellow"
                app:layout_constraintEnd_toStartOf="@id/first_guide">

                <TextView
                    android:id="@+id/tv_step1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_t25_30dp"
                    android:text="@string/label_step2"
                    android:textSize="@dimen/_12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_post"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_t25_30dp"
                    android:text="@string/label_post_test"
                    android:textSize="@dimen/_14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_step1"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_post"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_qs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/cl_total_qs"
                app:layout_constraintEnd_toEndOf="@id/cl_total_qs"
                android:src="@drawable/ic_questions"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="@dimen/_5dp"

                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_total_qs"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/_5dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/first_guide"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_cl_rectangle"
                android:backgroundTint="@color/blue"
                >

                <TextView
                    android:id="@+id/tv_total_qs"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_t25_30dp"
                    android:text="@string/label_question"
                    android:textSize="@dimen/_12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_no_of_qs"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_t25_30dp"
                    android:text="02"
                    android:textSize="@dimen/_14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_total_qs"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_no_of_qs"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_correct_correct_ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/cl_correct_ans"
                app:layout_constraintEnd_toEndOf="@id/cl_correct_ans"
                android:src="@drawable/ic_correct_ans"
                app:layout_constraintTop_toBottomOf="@id/cl_step"
                android:elevation="@dimen/_5dp"

                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_correct_ans"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/_5dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_step"
                android:background="@drawable/bg_cl_rectangle"
                android:backgroundTint="@color/green_002"
                app:layout_constraintEnd_toStartOf="@id/first_guide">

                <TextView
                    android:id="@+id/tv_correct_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_t25_30dp"
                    android:text="@string/label_correct_ans"
                    android:textSize="@dimen/_12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                  />

                <TextView
                    android:id="@+id/tv_no_of_correct_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_t25_30dp"
                    android:text="08"
                    android:textSize="@dimen/_14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_correct_answer"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_no_of_correct_answer"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_incorrect_ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/cl_incorrect_ans"
                app:layout_constraintEnd_toEndOf="@id/cl_incorrect_ans"
                android:src="@drawable/ic_incorrect_ans"
                app:layout_constraintTop_toBottomOf="@id/cl_step"
                android:elevation="@dimen/_5dp"

                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_incorrect_ans"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/_5dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/first_guide"
                app:layout_constraintTop_toBottomOf="@id/cl_step"
                app:layout_constraintEnd_toEndOf="parent"

                android:background="@drawable/bg_cl_rectangle"
                android:backgroundTint="@color/red_001"
                >

                <TextView
                    android:id="@+id/tv_incorrect_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_t25_30dp"
                    android:text="@string/label_incorrect_ans"
                    android:textSize="@dimen/_12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                 />

                <TextView
                    android:id="@+id/tv_no_of_incorrect_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_t25_30dp"
                    android:text="02"
                    android:textSize="@dimen/_14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_incorrect_answer"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_no_of_incorrect_answer"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>